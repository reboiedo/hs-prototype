---
import Eyebrow from "./Eyebrow.astro";

const { heading, paragraph, eyebrow, number } = Astro.props;
---

<section class="scroll-section" >
  <Eyebrow eyebrow={eyebrow} number={number}/>
  <div class="top">
    <h2 class="headline-2xl">{heading}</h2>
    <p class="body-md section-intro">{paragraph}</p>
  </div>
  <slot />

</section>

<style>

  .scroll-section {
    position: relative;
    width: 100%;
    max-width: 1054px;
    padding-top: var(--space-2xl);
    padding-bottom: var(--space-3xl);
    /* border-bottom: 1px solid var(--color-gray-200); */
    display: flex;
    flex-direction: column;
    gap: var(--space-l);
    margin: 0 auto;
  }

  .top {
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
  }

  .section-intro {
    color: var(--color-gray-600);
  }


</style>