---
const { eyebrow, number } = Astro.props;
---

<div class="eyebrow-text headline-sm">
  <div class="left">
    <div class="circle"></div>
    <div class="text">{eyebrow}</div>
  </div>
  <div class="divider"></div>
  <div class="right">
    <span>[</span>
    <span class="index-text">{number}</span>
    <span>]</span>
  </div>
</div>

<style>

  .eyebrow-text{
    white-space: nowrap;
    position: absolute;
    top: 0;
    width: 100%;
    color: var(--color-purple-800);
    text-transform: uppercase;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-xs);
    /* padding-top: var(--space-m); */
  }

  .left{
    display: flex;
    align-items: center;
    gap: var(--space-2xs);
  }

  .divider
  {
    width: 100%;
    height: 1px;
    background-color: var(--color-purple-50);
  }

  .right
  {
    color: var(--color-purple-100);
  }

  .index-text {
    color: var(--color-purple-800);
  }

  .circle{
    /* display: none; */
    width: var(--space-2xs);
    height: var(--space-2xs);
    background-color: var(--color-purple-100);
    border-radius: 50%;
  }

</style>